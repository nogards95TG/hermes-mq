{
  "name": "hermes-mq",
  "version": "1.0.0",
  "private": true,
  "description": "Modern, type-safe RabbitMQ client library for Node.js",
  "author": "nogards95TG",
  "license": "MIT",
  "keywords": [
    "rabbitmq",
    "amqp",
    "message-queue",
    "rpc",
    "pubsub",
    "typescript"
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test && pnpm test:integration",
    "test:unit": "turbo run test:unit",
    "test:integration": "vitest run --config packages/__tests__/integration/vitest.config.ts",
    "test:integration:watch": "vitest watch --config packages/__tests__/integration/vitest.config.ts",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "pre-push": "bash scripts/pre-push.sh",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "testcontainers": "^11.8.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
